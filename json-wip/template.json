{
  "builders": [{
    "type": "virtualbox-iso",
    "boot_command": [
      "<enter><f6><esc>",
      "<bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs>",
